<Window x:Class="Febelfin_academy_Logo_reveal.ButtonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

        xmlns:local="clr-namespace:Febelfin_academy_Logo_reveal"

        WindowStyle="None"
        mc:Ignorable="d"        
        
        Title="ButtonWindow" Height="450" Width="800" WindowStartupLocation="Manual">
    <UniformGrid x:Name="buttonGrid" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Button x:Name="buttonBlue" Background="{x:Static local:ButtonColors.Blue}"  Click="button_Click"/>
        <Button x:Name="buttonRed" Background="{x:Static local:ButtonColors.Pink}" Click="button_Click"/>
        <Button x:Name="buttonGreen" Background="{x:Static local:ButtonColors.Red}" Click="button_Click"/>
        <Button x:Name="buttonPurple" Background="{x:Static local:ButtonColors.Yellow}" Click="button_Click"/>
    </UniformGrid>

</Window>
